<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Vui lòng nhập admin hoặc staff"
        android:textSize="17sp"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/editUserPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Permission"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/btnEditUserPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Đổi Permission" />

    <Button
        android:id="@+id/btnCancelEditUserPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Hủy" />

</LinearLayout>
