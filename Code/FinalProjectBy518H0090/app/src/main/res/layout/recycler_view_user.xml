<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/userFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Họ tên : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userFullName"
            android:layout_marginTop="10dp"
            android:text="Ngày sinh : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userBirth"
            android:layout_marginTop="10dp"
            android:text="Số điện thoại : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userFullNameShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/userFullName"
            android:text="Full name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userBirthShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userFullNameShow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/userBirth"
            android:text="Ngày sinh"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userPhoneShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userBirthShow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/userPhone"
            android:text="Phone"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userPhone"
            android:layout_marginTop="10dp"
            android:text="Địa chỉ : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userAddressShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userPhone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/userAddress"
            android:text="Address"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userAddressShow"
            android:layout_marginTop="10dp"
            android:text="Email : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userEmailShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userAddressShow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/userEmail"
            android:text="Email"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnUserAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userEmail"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Action" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>



