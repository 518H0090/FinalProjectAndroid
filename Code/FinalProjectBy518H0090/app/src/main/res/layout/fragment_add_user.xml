<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/btnAccTION"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#EFEFEF"
        android:orientation="horizontal"
        android:weightSum="16">

        <ImageView
            android:id="@+id/btnTurnBackShowTable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/ic_baseline_navigate_before_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoCoffe"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_cafe" />

    </LinearLayout>


    <EditText
        android:id="@+id/editFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAccTION"
        android:layout_marginTop="20dp"
        android:hint="Họ tên nhân viên"
        android:inputType="text"
        android:maxLength="100" />

    <EditText
        android:id="@+id/editDateBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editFullName"
        android:layout_marginTop="20dp"
        android:hint="Ngày sinh"
        android:inputType="text"
        android:maxLength="100" />

    <EditText
        android:id="@+id/editUserPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDateBirth"
        android:layout_marginTop="20dp"
        android:hint="Số Điện thoại"
        android:inputType="number"
        android:maxLength="100" />

    <EditText
        android:id="@+id/editUserAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUserPhone"
        android:layout_marginTop="20dp"
        android:hint="Địa chỉ"
        android:inputType="text"
        android:maxLength="100" />


    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUserAddress"
        android:layout_marginTop="20dp"
        android:hint="Nhập Gmail"
        android:inputType="textEmailAddress"
        android:maxLength="100" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEmail"
        android:layout_marginTop="20dp"
        android:hint="Nhập Mật Khẩu"
        android:inputType="textPassword"
        android:maxLength="100" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="Thêm" />

    <Button
        android:id="@+id/btnDestroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btnAddUser"
        android:text="Hủy" />


</RelativeLayout>